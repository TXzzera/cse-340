<% if (title) { %>
  <h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<div id="deleteFormContainer">
  <p>
    <strong>Warning:</strong> Deletion is permanent and cannot be undone.
    Please confirm that the vehicle below is the one you want to delete.
  </p>

 <% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
 <% } %>

  <form id="deleteForm" action="/inv/deleteVehicle" method="post">
    <fieldset>
        <legend>Vehicle Details to Delete</legend>

        <label for="inv_make">Make</label>
        <input type="text" name="inv_make" id="inv_make" readonly value="<%= inv_make %>">
                
        <label for="inv_model">Model</label>
        <input type="text" name="inv_model" id="inv_model" readonly value="<%= inv_model %>">
                
        <label for="inv_year">Year</label>
        <input type="text" name="inv_year" id="inv_year" readonly value="<%= inv_year %>">

        <label for="inv_price">Price</label>
        <input type="text" name="inv_price" id="inv_price" readonly value="<%= new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(inv_price) %>">
        
        <label for="inv_description"><strong>Description:</strong></label>
        <textarea readonly> <%= inv_description %></textarea>
    </fieldset>

    <button id="delete" type="submit">CONFIRM PERMANENT DELETION</button>
    
    <input type="hidden" name="inv_id" value="<%= inv_id %>">
    <input type="hidden" name="classification_id" value="<%= classification_id %>">
  </form>

</div>
