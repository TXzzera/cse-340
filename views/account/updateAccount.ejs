<% if (title) { %>
    <h1><%- title %></h1>
    <%- messages() %>
<% } %>

<% if (errors && errors.length > 0) { %>
    <ul class="notice-error">
        <% errors.forEach(error => { %>
            <li><%= error.msg %></li>
        <% }) %>
    </ul>
<% } %>

<% 
    const accountDataAvailable = typeof accountData !== 'undefined' && accountData !== null;
    const account_firstname = accountDataAvailable ? accountData.account_firstname : '';
    const account_lastname = accountDataAvailable ? accountData.account_lastname : '';
    const account_email = accountDataAvailable ? accountData.account_email : '';
    const account_id = accountDataAvailable ? accountData.account_id : '';
%>

<form id="accountUpdateForm" action="/account/update" method="post">
    <h2>Account Update</h2>
    
    <label for="account_firstname">First Name:</label>
    <input type="text" id="account_firstname" name="account_firstname" required value="<%= account_firstname %>">

    <label for="account_lastname">Last Name:</label>
    <input type="text" id="account_lastname" name="account_lastname" required value="<%= account_lastname %>">

    <label for="account_email">Email:</label>
    <input type="email" id="account_email" name="account_email" required value="<%= account_email %>">
    
    <button type="submit">Update Account</button>
    
    <input type="hidden" name="account_id" value="<%= account_id %>">
</form>


<hr>

<form id="passwordChangeForm" action="/account/change-password" method="post">
    
    <h2>Change Password</h2>
    
    <p>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter, and 1 special character.</p>
    
    <label for="account_password">New Password:</label>
    <input 
        type="password" 
        id="account_password" 
        name="account_password" 
        required 
        pattern="^(?=.*\d)(?=.*[A-Z])(?=.*[!@#$%^&*])(?=.*[a-z]).{12,}$"
    >
    
    <button type="submit">Change Password</button>

    <input type="hidden" name="account_id" value="<%= accountData?.account_id || 0 %>">

</form>