<% if (title) { %>
  <h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<section class="management-actions">
  <a class="newClass" href="/inv/addClassification"> Add a New Classification</a>
  <a class="newVehicle" href="/inv/addVehicle"> Add a New Vehicle</a>
</section>

<hr>

<!-- Section to Delete Classifications -->
<section class="delete-section">
  <h2>Delete a Classification</h2>

  <% if (locals.classifications && locals.classifications.length > 0) { %>
    <ul class="delete-list">
      <% locals.classifications.forEach(c => { %>
        <li>
          <%= c.classification_name %>
          <form action="/inv/deleteClassification" method="post" style="display:inline;">
            <input type="hidden" name="classification_id" value="<%= c.classification_id %>">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this classification?')">Delete</button>
          </form>

        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No classifications found.</p>
  <% } %>
</section>

<hr>

<!-- Section to Delete Vehicles -->
<section class="delete-section">
  <h2>Delete a Vehicle</h2>

  <% if (locals.vehicles && locals.vehicles.length > 0) { %>
    <ul class="delete-list">
      <% locals.vehicles.forEach(v => { %>
        <li>
          <%= v.inv_make %> <%= v.inv_model %> (<%= v.inv_year %>)
          <form action="/inv/deleteVehicle" method="post" style="display:inline;">
            <input type="hidden" name="inv_id" value="<%= v.inv_id %>">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this vehicle?')">Delete</button>
          </form>

        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No vehicles found.</p>
  <% } %>
</section>
