<div class="user-account">
  <% if (title) { %>
  <h1><%- title %></h1>
  <%- messages() %>
<% } else {
  res.redirect('/')
} %>

<%
// Capture the first name and ID (assuming they were passed as "accountData")
const firstName = accountData.account_firstname;
const accountId = accountData.account_id;
const accountType = accountData.account_type;
%>

<h2>Welcome, <%= firstName %>!</h2>

<p>
<a id="update-info" href="/account/update/<%= accountId %>" title="Click to update account information">Update Account Information</a>
</p>

<% if (accountType === "Employee" || accountType === "Admin") { %>

<h3>Inventory Management</h3>
<p>
 <a href="/inv/" title="Click to manage inventory">Access Inventory Management View</a>
</p>

<% } %>

    <hr>

<div class="account-box">
  <p>Your account information:</p>
  <ul>
    <li><strong>Name:</strong> <%= accountData.account_firstname %> <%= accountData.account_lastname %></li>
    <li><strong>Email:</strong> <%= accountData.account_email %></li>
    <li><strong>Account Type:</strong> <%= accountData.account_type %></li>
  </ul>
</div>

</div>
