<% if (title) { %>
  <h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<section class="management-actions">
  <a class="newClass" href="/inv/addClassification">Add a New Classification</a>
  <a class="newVehicle" href="/inv/addVehicle">Add a New Vehicle</a>
  <a class="deleteClassification" href="/inv/deleteClassification">Delete a Classification</a>
</section>

<hr>

<h2>Manage Inventory</h2>
<p>Select a classification from the list below to see the inventory items.</p>

<!-- Dropdown list of classifications -->
<%- classifications %>

<!-- Empty table that will be filled by JavaScript -->
<table id="inventoryDisplay"></table>

<noscript>JavaScript must be enabled to use this page.</noscript>

<script src="../../js/inventory.js"></script>


